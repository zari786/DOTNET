
@{
    ViewBag.Title = "ForgotPassword";
}

<div class="inner_page_about">
</div>
<div style="text-align:center; padding-top:10px">
    <h4 style="color:#0ca2cf !important;">Forgot Password</h4>
</div>
@using (Html.BeginForm())
{
<div class="container-fluid">
    <div class="form-horizontal">
        <hr />
        <div class="text-success" style="text-align:center">
            @ViewBag.Message
        </div>
        <div class="row">
            <div class="col-md-3 col-sm-3 col-lg-3 col-xs-3"></div>
            <div class="col-md-6 col-sm-6 col-lg-6 col-xs-6">
                <div class="form-group">
                    @Html.Label("Enter Email ID", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @*@Html.EditorFor("EmailID","", new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.TextBox("EmailID", "",  new { @class = "form-control"} )
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-3 col-lg-3 col-xs-3"></div>
        </div>
        <br />

        <div class="row">
            <div class="col-md-3 col-sm-3 col-lg-3 col-xs-3"></div>
            <div class="col-md-6 col-sm-6 col-lg-6 col-xs-6"  style="padding-left:200px;">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submit" class="btn btn-default" />
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-3 col-lg-3 col-xs-3"></div>
        </div>
    </div>
</div>
}
