
@{
    ViewBag.Title = "ForgotPassword";
}

<div class="inner_page_about">
</div>
<h5 style="text-align:center ">Forgot Password</h5>
@using (Html.BeginForm())
{
<div class="container-fluid">
    <div class="form-horizontal">
        <hr />
        <div class="text-success" style="text-align:center">
            @ViewBag.Message
        </div>
        <div class="row">
            <div class="col-md-3 col-sm-3 col-lg-3 col-xs-3"></div>
            <div class="col-md-6 col-sm-6 col-lg-6 col-xs-6">
                <div class="form-group" style="align-items:center">
                    @Html.Label("Enter Email ID", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBox("EmailID", "", new { htmlAttributes = new { @class = "form-control"} })
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-3 col-lg-3 col-xs-3"></div>
        </div>
        <div class="row">
            <div class="col-md-3 col-sm-3 col-lg-3 col-xs-3"></div>
            <div class="col-md-6 col-sm-6 col-lg-6 col-xs-6">
                <div class="form-group" style="align-items:center">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Submit" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}
